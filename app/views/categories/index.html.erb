<h1>All categories</h1>

<div class= "row show-grid">
  <div class="row">
    <% @categories.each do |category| %>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <div class="thumbnail">
        <img src="rad_cam.png" alt="...">
        <div class="caption">
          <h4><%= link_to category.name, category %></h4>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>





