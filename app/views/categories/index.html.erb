<section class="category_index_page">
  <div class= "row show-grid">
    <div class="row">
        <% @categories.each do |category| %>
        <div class="col-xs-6 col-sm-4 col-md-3">
          <%= link_to category do %>
          <div class="thumbnail">
            <%= image_tag category.image, class: 'category_image' %>
            <div class="caption">
              <h5 class="category_thumbnail_caption"><%= category.name %></h5>
            </div>
          </div>
          <% end %>
        </div>
        <% end %>
    </div>
  </div>
</section>

